@model FIT5032_Assignment.Models.EmailViewModel


<div>
    <hr>
    <h1>Email send</h1>
    @using (Html.BeginForm("SendEmail", "Clinics", FormMethod.Post, new { id = "emailForm", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


        if (@ViewBag.Result != null)
        {
            <div class="alert alert-info">@ViewBag.Result</div>
        }
        <div class="form-group">
            @Html.LabelFor(model => model.Emails, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Emails, new { @class = "form-control", @style = "width: 800px;", @id = "Useremail" })
                @Html.ValidationMessageFor(model => model.Emails, "", new { @class = "text-danger" })
            </div>
        </div>
        <br>

        <div class="form-group">
            @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @style = "width: 800px;" } })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            </div>
        </div>



        <br>
        <div class="form-group">
            @Html.LabelFor(model => model.Attachment, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Attachment, new { type = "file" })
            </div>
        </div>
        <br>

        <div class="form-group">
            @Html.LabelFor(model => model.Contents, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea id="emailBody" name="Contents" class="form-control">@Model.Contents</textarea>
                @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger" })
            </div>
        </div>


        <br>
        <input type="submit" value="Send Email" class="btn btn-success" />
    }
</div>


<style>
    .custom-label {
        width: 150px;
    }

    .custom-input {
        width: 350px;
    }
    </style>